@model IEnumerable<BangazonWebApp.Models.ProductCategoryViewModel>

@{
    ViewData["Title"] = "Product Categories";
}

<h2>Product Categories</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Label)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Label) (@Html.DisplayFor(modelItem => item.ProductCount))
                @foreach (var product in item.Products)
                {
                    <div class="col-md-offset-1"><a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">@product.Title</a></div>
                }
            </td>
            
        </tr>
}
    </tbody>
</table>
