@model BangazonWebApp.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div class="row">
    <hr />
    <div class="col-md-3 col-md-offset-1">
        <img src="@Url.Content(Model.ImagePath)" alt="@Model.Title"  class="img-responsive" />
    </div>

    <div class="col-md-7">
        <span class="col-md-offset-1 col-md-8">
            @Html.DisplayFor(model => model.Description)
        </span>
        <span class="col-md-offset-9 col-md-3">@Html.DisplayFor(model => model.Quantity) Available</span>
        <span class="col-md-offset-9 col-md-3">@Html.DisplayFor(model => model.Price)</span>
        <button class="col-md-offset-9 col-md-3 btn btn-primary" asp-action="AddProduct" asp-controller="Orders" asp-route-id="@Model.ProductId">Add To Order</button>
    </div> 
</div>
